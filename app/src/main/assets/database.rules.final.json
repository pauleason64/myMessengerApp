{
  "rules": {
    "messages": {
      "$messageId": {
        ".read": "auth != null && (data.child('senderId').val() === auth.uid || data.child('recipientId').val() === auth.uid || (data.child('isNote').val() === true && data.child('senderId').val() === auth.uid))",
        ".write": "auth != null && (!data.exists() || (data.child('senderId').val() === auth.uid && newData.child('senderId').val() === auth.uid) || (data.child('recipientId').val() === auth.uid && newData.child('recipientId').val() === auth.uid) || (data.child('isNote').val() === true && data.child('senderId').val() === auth.uid))",
        "senderId": {
          ".validate": "newData.val() === auth.uid"
        },
        "recipientId": {
          ".validate": "newData.isString() || (newData.parent().child('isNote').val() === true && newData.val() === null)"
        },
        "content": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        },
        "read": {
          ".validate": "newData.isBoolean()"
        },
        "subject": {
          ".validate": "newData.isString()"
        },
        "isNote": {
          ".validate": "newData.isBoolean()"
        },
        "id": {
          ".validate": "newData.val() === $messageId"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "user-messages": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "sent": {
          "$messageId": {
            ".write": "auth != null && auth.uid === $uid && newData.val() === true"
          }
        },
        "received": {
          "$messageId": {
            ".write": "auth != null && auth.uid === $uid && newData.val() === true"
          }
        },
        "notes": {
          "$messageId": {
            ".write": "auth != null && auth.uid === $uid && newData.val() === true",
            ".validate": "newData.val() === true"
          }
        }
      }
    }
  }
}