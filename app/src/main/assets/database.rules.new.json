{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('user-contacts').child(auth.uid).child($uid).exists())",
        ".write": "auth != null && auth.uid === $uid",
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
        },
        "displayName": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "user-contacts": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$contactId": {
          ".write": "auth != null && auth.uid === $uid",
          ".validate": "newData.hasChildren(['email', 'displayName'])",
          "email": {
            ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
          },
          "displayName": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },
    "messages": {
      "$messageId": {
        ".read": "auth != null && (data.child('senderId').val() === auth.uid || data.child('recipientId').val() === auth.uid || (data.child('isNote').val() === true && data.child('senderId').val() === auth.uid))",
        ".write": "auth != null && (\n          !data.exists() || \n          (data.child('senderId').val() === auth.uid && newData.child('senderId').val() === auth.uid) ||\n          (data.child('recipientId').val() === auth.uid && newData.child('recipientId').val() === auth.uid)\n        )",
        "senderId": {
          ".validate": "newData.val() === auth.uid"
        },
        "recipientId": {
          ".validate": "newData.isString() || (newData.parent().child('isNote').val() === true && newData.val() === null)"
        },
        "content": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        },
        "read": {
          ".validate": "newData.isBoolean()"
        },
        "subject": {
          ".validate": "newData.isString()"
        },
        "isNote": {
          ".validate": "newData.isBoolean()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "user-messages": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "sent": {
          "$messageId": {
            ".write": "auth != null && auth.uid === $uid"
          }
        },
        "received": {
          "$messageId": {
            ".write": "auth != null && auth.uid === $uid"
          }
        },
        "notes": {
          "$messageId": {
            ".write": "auth != null && auth.uid === $uid &&\n            (!data.exists() || data.val() === true) &&\n            newData.val() === true",
            ".validate": "newData.val() === true"
          }
        }
      }
    }
  }
}
